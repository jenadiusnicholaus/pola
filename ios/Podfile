# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS'].split
          flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
          file.settings['COMPILER_FLAGS'] = flags.join(' ')
        end
      end
    end
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      
      # Remove the problematic architecture exclusion for Firebase Analytics linking
      config.build_settings.delete('EXCLUDED_ARCHS[sdk=iphonesimulator*]')
      
      # Comprehensive C++ fixes for gRPC and Xcode 16 compatibility
      config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++14'
      config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
      
      # Firebase linker fixes for undefined symbols
      if target.name.include?('Firebase') || target.name.include?('FIR')
        config.build_settings['OTHER_LDFLAGS'] = "$(inherited) -lc++ -ObjC"
        config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'YES'
      end
      
      # Additional gRPC-specific fixes
      if target.name.include?('gRPC')
        config.build_settings['GCC_C_LANGUAGE_STANDARD'] = 'gnu11'
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = "$(inherited) -DGRPC_ARES=0"
      end
    end
  end
  
  # Fix Firebase privacy bundle issue with 10.25.0
  installer.pods_project.targets.each do |target|
    if target.name == 'FirebaseCoreInternal'
      puts "ðŸ”§ Fixing Firebase privacy bundle issue..."
      target.copy_files_build_phases.each do |build_phase|
        build_phase.files.each do |build_file|
          if build_file.display_name&.include?('Privacy')
            puts "âœ… Removing problematic privacy bundle: #{build_file.display_name}"
            build_phase.remove_file_reference(build_file.file_ref)
          end
        end
      end
    end
  end
end
