# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Disable privacy manifest generation
ENV['COCOAPODS_DISABLE_PRIVACY_MANIFESTS'] = '1'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

# Force all pods to build as static libraries (required for Firebase + gRPC to link properly)
$static_framework_ios_pod_names = [
  'abseil',
  'BoringSSL-GRPC',
  'gRPC-Core',
  'gRPC-C++',
  'leveldb-library',
  'FirebaseFirestoreInternal',
  'FirebaseFirestore',
  'GoogleAppMeasurement',
  'FirebaseAnalytics',
  'nanopb',
]

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# Pre-install hook to ensure proper static framework setup
pre_install do |installer|
  # Force Pod::Installer::Xcode::TargetValidator to not error on static framework dependencies
  Pod::Installer::Xcode::TargetValidator.send(:define_method, :verify_no_static_framework_transitive_dependencies) {}
  
  installer.pod_targets.each do |pod|
    if $static_framework_ios_pod_names.include?(pod.name)
      def pod.build_type
        Pod::BuildType.static_library
      end
    end
  end
end

post_install do |installer|
  # CRITICAL: First remove privacy bundle targets completely before they're referenced
  privacy_targets_to_remove = []
  installer.pods_project.targets.each do |target|
    if target.name.include?('_Privacy')
      privacy_targets_to_remove << target
      puts "ðŸ”§ Marking privacy target for removal: #{target.name}"
    end
  end
  
  # Remove dependencies on privacy targets
  installer.pods_project.targets.each do |target|
    target.dependencies.delete_if do |dep|
      if dep.target && dep.target.name && dep.target.name.include?('_Privacy')
        puts "ðŸ”§ Removing dependency on #{dep.target.name} from #{target.name}"
        true
      else
        false
      end
    end
    
    # Remove privacy bundles from embed/copy phases
    target.build_phases.each do |phase|
      next unless phase.respond_to?(:files) && phase.files
      phase.files.delete_if do |file|
        if file.display_name && file.display_name.include?('_Privacy')
          puts "ðŸ”§ Removing #{file.display_name} from #{target.name} build phase"
          true
        else
          false
        end
      end
    end
  end
  
  # Actually remove the privacy targets from the project
  privacy_targets_to_remove.each do |target|
    puts "ðŸ”§ Removing target: #{target.name}"
    installer.pods_project.targets.delete(target)
  end
  
  installer.pods_project.targets.each do |target|
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS'].split
          flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
          file.settings['COMPILER_FLAGS'] = flags.join(' ')
        end
      end
    end
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      
      # Comprehensive C++ fixes for gRPC and Xcode 16 compatibility
      config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
      config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
      
      # Critical linker flags for proper symbol resolution with static frameworks
      # -ObjC ensures Objective-C categories are loaded from static archives
      # -lc++ ensures C++ standard library is linked
      # -force_load is needed for static archives that might have lazy-loaded symbols
      config.build_settings['OTHER_LDFLAGS'] = '$(inherited) -ObjC -lc++ -lz'
      
      # Additional gRPC-specific fixes for Xcode 16+
      if target.name.include?('gRPC') || target.name.include?('abseil') || target.name.include?('BoringSSL')
        config.build_settings['GCC_C_LANGUAGE_STANDARD'] = 'gnu17'
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
        # Add flags to disable the template keyword diagnostic that's causing issues in Xcode 16
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = '$(inherited) -DGRPC_ARES=0 -Wno-comma -Wno-error=missing-template-arg-list-after-template-kw'
      end
    end
  end
  
  # Handle remaining resource bundles
  installer.pods_project.targets.each do |target|
    if target.respond_to?(:product_type) && target.product_type == "com.apple.product-type.bundle"
      target.build_configurations.each do |config|
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        config.build_settings['SKIP_INSTALL'] = 'YES'
      end
    end
  end
  
  # Save the modified project
  installer.pods_project.save
  puts "ðŸ”§ Privacy bundle fixes applied and project saved"
end
