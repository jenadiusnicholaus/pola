# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  flutter_post_install(installer) if defined?(flutter_post_install)
  
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      # iOS deployment target
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      
      # Architecture settings for simulator compatibility
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['ARCHS[sdk=iphonesimulator*]'] = 'x86_64'
      config.build_settings['ARCHS[sdk=iphoneos*]'] = 'arm64'
      
      # Universal fix for all problematic compiler flags
      ['OTHER_CFLAGS', 'OTHER_CPLUSPLUSFLAGS'].each do |setting|
        if config.build_settings[setting]
          config.build_settings[setting] = config.build_settings[setting].reject do |flag|
            flag.include?('-G') || flag.include?('-msse') || flag.include?('-march=') || flag.include?('-mtune=')
          end
          config.build_settings.delete(setting) if config.build_settings[setting].empty?
        end
      end
      
      # Disable assembly optimizations for BoringSSL to avoid -G flag
      if target.name.include?('BoringSSL')
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= []
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'OPENSSL_NO_ASM=1'
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
        config.build_settings['GCC_OPTIMIZATION_LEVEL'] = '2'  # Standard optimization
        config.build_settings['ENABLE_BITCODE'] = 'NO'
        config.build_settings['OTHER_CFLAGS'] = ['-w', '-DOPENSSL_NO_ASM']
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = ['-w', '-DOPENSSL_NO_ASM']
        
        # Explicitly disable problematic architecture-specific optimizations
        config.build_settings['ENABLE_STRICT_OBJC_MSGSEND'] = 'NO'
        config.build_settings['GCC_ENABLE_OBJC_EXCEPTIONS'] = 'YES'
      end
      
      # C++ standard
      config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++17'
      config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
      
      # Code signing
      config.build_settings['CODE_SIGN_STYLE'] = 'Automatic'
      config.build_settings['DEVELOPMENT_TEAM'] = ''
      
      # Bitcode
      config.build_settings['ENABLE_BITCODE'] = config.name == 'Release' ? 'YES' : 'NO'
    end
  end
end
